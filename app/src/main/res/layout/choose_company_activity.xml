<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_95dp">

                    <LinearLayout
                        android:id="@+id/ll_back"
                        android:gravity="center"
                        android:layout_width="@dimen/size_60dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:src="@mipmap/ic_back_arrow"
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="@dimen/size_20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_title"
                            android:text="选择企业"
                            android:textColor="#333333"
                            android:textSize="@dimen/size_18dp"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_add"
                        android:gravity="center"
                        android:layout_width="@dimen/size_90dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="添加企业"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_64dp">

                <RelativeLayout
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_24dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_short"
                        android:text="加盟名称公司简称"
                        android:textColor="#333333"
                        android:textSize="@dimen/ysf_text_size_16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_long"
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/tv_short"
                        android:text="公司名称公司名称公司名称"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="当前企业"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#FF5C00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:text="其他公司"
                android:layout_marginTop="@dimen/sp_14"
                android:layout_marginBottom="@dimen/size_6dp"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:text="确认"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="@dimen/size_30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_red_orders"
        android:layout_width="301dp"
        android:layout_height="@dimen/size_45dp"/>

</LinearLayout>