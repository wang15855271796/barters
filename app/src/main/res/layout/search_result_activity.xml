<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30dp"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_back_arrow" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/size_5dp"
                android:layout_weight="1"
                android:background="@drawable/app_search"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tv_activity_result"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:background="@drawable/shape_shouye"
                    android:hint="请输入商品名称"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColorHint="@color/app_cancle_gray"
                    android:textSize="14dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.06"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="取消"
                    android:textColor="@color/color_333"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_num"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_48dp">

                    <ImageView
                        android:padding="5dp"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_tab_cart_unable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/size_30dp"
                        android:visibility="gone"
                        android:background="@drawable/shape_car_num"
                        android:gravity="center"
                        tools:text="9"
                        android:textColor="@color/white"
                        android:textSize="7dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_46dp">

            <LinearLayout
                android:id="@+id/ll_all"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/size_46dp">

                <ImageView
                    android:id="@+id/iv_all"
                    android:src="@mipmap/icon_all_un"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_all"
                    android:text="综合"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sale"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/size_46dp">

                <ImageView
                    android:id="@+id/iv_sale"
                    android:src="@mipmap/icon_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_sale"
                    android:text="销量"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/size_46dp">

                <ImageView
                    android:id="@+id/iv_price"
                    android:src="@mipmap/icon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="价格"
                    android:textColor="#333333"
                    android:id="@+id/tv_price"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_direction"
                    android:layout_marginLeft="@dimen/size_6dp"
                    android:src="@mipmap/icon_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@+id/ptr_layout"
            cube_ptr:ptr_duration_to_close="200"
            cube_ptr:ptr_duration_to_close_header="1000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    </LinearLayout>

</RelativeLayout>