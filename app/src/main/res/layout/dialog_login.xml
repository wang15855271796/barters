<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_margin="53dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/size_18dp"
            android:text="提示"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="@dimen/size_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/size_26dp"
            android:layout_marginLeft="@dimen/size_26dp"
            android:layout_gravity="center_horizontal"
            android:text="您当前绑定的杭州泰斯特有限公司账号已停用，请联系企业进行处理"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:textColor="#333333"
            android:textSize="14sp"
            android:id="@+id/tv_phone"
            android:layout_gravity="center_horizontal"
            android:text="客服电话：057-187758340"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:orientation="vertical">

            <View
                android:background="#BABABA"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_0.5"/>

            <TextView
                android:id="@+id/tv_ok"
                android:text="我知道了"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#FF2925"
                android:textSize="@dimen/size_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>