<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/size_12dp"
        android:id="@+id/rl_group"
        android:layout_marginLeft="@dimen/size_10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white1"
        android:layout_width="wrap_content"
        android:layout_height="270dp">

        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="wrap_content"
            android:layout_height="171dp">

            <com.barter.hyl.app.view.RoundImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_empty" />

            <ImageView
                android:id="@+id/iv_player"
                android:visibility="gone"
                android:src="@mipmap/icon_player"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/size_35dp"
                android:layout_height="@dimen/size_35dp"/>

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_jianbian20"
                android:padding="@dimen/size_2dp"
                android:text="其他信息"
                android:textColor="#ffffff"
                android:textSize="10sp" />

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="vertical"
            android:layout_below="@+id/rl_pic"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_toRightOf="@+id/tv_style"
                android:id="@+id/tv_title"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="5dp"
                android:text="崇贤上亿官场二层真香集排破产了，低价转让了崇贤上亿官场二层真香集排破产了，低价转让了"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_desc"
            android:layout_below="@+id/ll_title"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20dp">

            <TextView
                android:textColor="#FF2925"
                android:id="@+id/tv_num"
                android:layout_toRightOf="@+id/tv_time"
                android:textSize="@dimen/size_14dp"
                android:gravity="right"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@+id/ll_title"
                tools:text="12656"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_toRightOf="@+id/iv_head"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="18757104840" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="地址：浙江省杭州市"
            android:textColor="#999999"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>