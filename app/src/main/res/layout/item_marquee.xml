<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_notice"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingRight="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp">

        <ImageView
            android:id="@+id/iv_notice"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_notice"
            android:id="@+id/tv_notice_desc"
            android:textColor="#FF0000"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/size_90dp"
            android:layout_centerVertical="true"
            android:text="系统维护停服升级公告系统维护停服升级公告"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:textColor="#FF0000"
            android:layout_centerVertical="true"
            android:text="2021102622"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>