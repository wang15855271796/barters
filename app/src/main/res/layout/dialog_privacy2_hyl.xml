<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_margin="@dimen/size_25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/size_18dp"
            android:text="隐私政策提示"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="@dimen/size_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:text="您需要同意货易链隐私政策才能使用货易链。 "
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/title2"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:text="如您不同意，很遗憾我们无法为您提供服务。"
            android:textColor="#333333"
            android:textSize="12sp" />


        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tv_content"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:text="您可通过阅读完整的《货易链隐私政策》及《第三方信息数据共享》来了解详情信息。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="@dimen/size_13dp"
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unAgree"
                android:text="不同意并退出"
                android:textColor="#666666"
                android:textSize="@dimen/size_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size_10dp"
            android:id="@+id/ll_sure"
            android:layout_marginBottom="@dimen/size_18dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="@drawable/shape_orange"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:text="同意并使用"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>