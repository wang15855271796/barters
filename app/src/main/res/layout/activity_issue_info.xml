                            android:layout_height="@dimen/size_48dp"
                            android:layout_marginLeft="@dimen/size_18dp"
                            android:gravity="center_vertical"
                            android:text="发布位置："
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14" />

                        <TextView
