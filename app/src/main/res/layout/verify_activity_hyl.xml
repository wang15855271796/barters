<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_hyl"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="@dimen/size_26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/size_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:background="#ffffff">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="@dimen/size_15dp"
                        android:hint="请输入新密码"
                        android:password="true"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#cccccc"
                        android:textSize="@dimen/size_18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_password"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:background="#cccccc"
                        android:orientation="vertical" />

                    <RelativeLayout
                        android:id="@+id/rl_eye1"
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/iv_eye1"
                            android:layout_centerInParent="true"
                            android:layout_width="18dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/ic_login_hide" />

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:background="#ffffff">

                    <EditText
                        android:id="@+id/et_password_sure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="@dimen/size_15dp"
                        android:hint="请确认新密码"
                        android:password="true"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="#232131"
                        android:textColorHint="#cccccc"
                        android:textSize="@dimen/size_18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_password_sure"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:background="#cccccc"
                        android:orientation="vertical" />

                    <RelativeLayout
                        android:id="@+id/rl_eye2"
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/iv_eye2"
                            android:layout_centerInParent="true"
                            android:layout_width="18dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/ic_login_hide" />

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/ll"
        android:layout_marginLeft="@dimen/size_25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/shape_cart_button"
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:text="确定"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        />


</LinearLayout>