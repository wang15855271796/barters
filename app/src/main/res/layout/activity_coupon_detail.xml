<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title_hyl"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_grey5"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="@dimen/size_5dp"
            android:hint="在以下商品中搜索"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_7dp"
            android:paddingBottom="@dimen/size_7dp"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_red3"
            android:paddingLeft="@dimen/size_7dp"
            android:paddingTop="@dimen/size_7dp"
            android:paddingRight="@dimen/size_7dp"
            android:paddingBottom="@dimen/size_7dp"
            android:text="搜索"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/size_7dp"
        android:layout_marginLeft="@dimen/size_8dp"
        android:paddingTop="@dimen/size_7dp"
        android:paddingRight="@dimen/size_7dp"
        android:paddingBottom="@dimen/size_7dp"
        android:text="以下商品可使用“禾鑫毛毛肉满1110减28元”优惠券"
        android:textColor="#ff5000" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>