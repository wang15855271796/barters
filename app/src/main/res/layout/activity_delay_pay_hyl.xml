<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_hyl"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/size_30dp"
                android:id="@+id/iv_state"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_pay_success"
                />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="提交成功"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:textColor="#333333"
                android:text="货到付款申请已提交，系统审核中"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/size_20dp"
            android:id="@+id/tv_order_look"
            android:layout_width="@dimen/public_space_value_120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_red_two"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="查看订单"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>