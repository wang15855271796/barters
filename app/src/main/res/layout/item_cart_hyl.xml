<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white1"
    android:layout_marginBottom="@dimen/size_15dp"
    android:orientation="horizontal">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--滑动删除模块-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_delete"
            android:background="@drawable/app_car"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="150dp">

            <TextView
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--大列表模块-->
        <LinearLayout
            android:id="@+id/ll_cart"
            android:background="@drawable/shape_white1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--满赠头部模块-->
            <RelativeLayout
                android:id="@+id/rl_tip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_38dp">

                <TextView
                    android:text="满赠"
                    android:id="@+id/tv1"
                    android:textSize="9sp"
                    android:textColor="#ffffff"
                    android:padding="2dp"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_orange_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@+id/tv1"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_tip"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="满2箱赠商品，还差1箱"
                    android:layout_marginRight="@dimen/size_90dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:textColor="#F6551A"
                    android:drawablePadding="@dimen/size_5dp"
                    android:drawableRight="@mipmap/qg_cart_jump"
                    android:layout_marginRight="@dimen/size_22dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="去凑单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginRight="@dimen/size_16dp"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:background="#f2f3f6"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>

            <com.barter.hyl.app.view.SlideRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--赠品商品模块-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_goods"
                android:layout_marginLeft="@dimen/size_30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <!--赠品优惠券模块-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coupon"
                android:layout_marginLeft="@dimen/size_44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/cart_item_bg"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="删除"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp" />

</LinearLayout>

