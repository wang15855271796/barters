<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/common_title_hyl"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/size_70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@mipmap/icon_pay_success"
                />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="提交成功"
                android:textColor="#333333"
                android:textSize="@dimen/size_20dp" />

            <TextView
                android:layout_width="219dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/size_6dp"
                android:gravity="center_horizontal"
                android:text="信息已提交成功，我们将在5个工作日内与您联系"
                android:textColor="#999999"
                android:textSize="14sp"
                />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/size_20dp"
            android:id="@+id/tv_sure"
            android:layout_width="@dimen/public_space_value_120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_red_two"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="返回登录页"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>