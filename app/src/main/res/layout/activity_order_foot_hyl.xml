<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_white1"
                >

                <!--商品数量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="商品数量"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        tools:text="3"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="@string/commodityAmount"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <TextView
                        android:id="@+id/tvNewOrderCommodityAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="@string/distributionFee"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <TextView
                        tools:text="100"
                        android:id="@+id/tvNewOrderDistributionFeePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <!--满减活动-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_full_activies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="@string/vipSubtractionActivity"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <TextView
                        tools:text="200"
                        android:id="@+id/tv_full_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="@string/textCoupons"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <TextView
                        android:id="@+id/tv_deduct_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="20"
                        android:layout_marginLeft="@dimen/size_30dp"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tvNewOrderCoupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <!--支付方式-->
                <LinearLayout
                    android:id="@+id/ll_payWay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="支付方式"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_payWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        tools:text="支付宝"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />
                </LinearLayout>

            </LinearLayout>

            <!--付款金额-->

            <LinearLayout
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_23dp"
                        android:text="订单金额"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_order_amount"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F6561A"
                        tools:text="ssassssss"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_should_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_23dp"
                        android:text="应付金额"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_payable_amount"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F6561A"
                        tools:text="ssassssss"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_payed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    >

                    <TextView
                        android:drawablePadding="@dimen/size_3dp"
                        android:drawableLeft="@mipmap/icon_moneys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_23dp"
                        android:text="线下已支付金额"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_payed"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F6561A"
                        tools:text="ssassssss"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_remain_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    >

                    <TextView
                        android:drawablePadding="@dimen/size_3dp"
                        android:drawableLeft="@mipmap/icon_moneys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_23dp"
                        android:text="剩余应付金额"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_remain_pay"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F6561A"
                        tools:text="ssassssss"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_check_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_23dp"
                        android:text="审核通过时间"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_check_time"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        tools:text="ssassssss"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_payable_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_23dp"
                        android:text="最迟应付时间"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_payable_time"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        tools:text="ssassssss"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_pay"
                    android:text="立即支付"
                    android:textColor="#ffffff"
                    android:padding="@dimen/size_3dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape_full_reds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <!--未支付的状态-->
            <!--备注-->
            <RelativeLayout
                android:id="@+id/ll_beizhu"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_13dp"
                    android:text="备注"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_beizhu"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/size_11dp"
                    android:drawableRight="@mipmap/ic_address_icon"
                    android:hint="请输入你的备注"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/size_12dp" />

            </RelativeLayout>
            <!--已支付的状态-->
            <LinearLayout
                android:id="@+id/ll_order_info"
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_height="wrap_content">

                <!--下单时间-->
                <LinearLayout
                    android:id="@+id/ll_order_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="@string/newOrderTime"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        tools:text="2020.3.2"
                        android:gravity="right"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <!--付款时间-->
                <LinearLayout
                    android:id="@+id/ll_pay_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="付款时间"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:id="@+id/tv_pay_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        tools:text="2020.3.2"
                        android:gravity="right"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_send_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="发货时间"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:id="@+id/tv_send_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:gravity="right"
                        tools:text="ssss"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_receive_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="收货时间"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        android:id="@+id/tv_receive_time"
                        tools:text="1212"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_11dp" />
                </LinearLayout>

                <!--备注-->
                <LinearLayout
                    android:id="@+id/ll_beizhu_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="备注"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />


                    <TextView
                        tools:text="ssssss"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="right"
                        android:id="@+id/tv_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:textColor="#999999"
                        android:textSize="@dimen/size_11dp" />

                </LinearLayout>



            </LinearLayout>

            <!--关联退货-->
            <LinearLayout
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_height="wrap_content">

                <!--关联退货-->
                <LinearLayout
                    android:id="@+id/ll_return_goods"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:text="关联退货"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/size_12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>



    <!--关联退货-->
