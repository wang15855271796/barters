<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_white1"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <RelativeLayout
                android:layout_marginRight="@dimen/size_18dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.barter.hyl.app.view.RoundImageView
                        android:id="@+id/iv_pic"
                        android:layout_width="91dp"
                        android:layout_height="91dp"
                        android:layout_marginLeft="@dimen/size_12dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_empty" />

                    <ImageView
                        android:id="@+id/iv_player"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_player"
                        android:layout_width="@dimen/size_30dp"
                        android:layout_height="@dimen/size_30dp"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_toEndOf="@+id/rl_pic"
                    android:text="店铺转让"
                    android:background="@drawable/shape_jianbian8"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:text="店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@+id/tv_title"
                    android:id="@+id/tv_desc"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_toEndOf="@+id/rl_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    tools:text="12.00"
                    android:layout_below="@+id/tv_desc"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_10"
                    android:id="@+id/tv_time"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_toRightOf="@+id/rl_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_desc"
                    android:text="1586人看过"
                    android:textSize="10sp"
                    android:textColor="#FF5C00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                tools:src="@mipmap/ic_verify" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="@dimen/public_space_value_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp"
            android:layout_below="@+id/rl">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_toRightOf="@+id/iv_status"
                android:text="信息已审核通过"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />


            <TextView
                android:visibility="gone"
                android:id="@+id/tv_status2"
                android:layout_toRightOf="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_5dp"
                android:background="@drawable/shape_grey5"
                android:paddingLeft="@dimen/size_6dp"
                android:paddingTop="@dimen/size_3dp"
                android:paddingRight="@dimen/size_6dp"
                android:paddingBottom="@dimen/size_3dp"
                android:text="已删除"
                android:textColor="#414141"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_toRightOf="@+id/tv_status"
                android:background="@drawable/shape_pink"
                android:padding="@dimen/size_2dp"
                android:text="查看原因"
                android:textColor="#FF2925"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_deleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/ll_change"
                android:drawableLeft="@mipmap/iv_delete"
                android:drawablePadding="@dimen/size_5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/size_3dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/size_3dp"
                android:text="删除"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/ll_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:drawableLeft="@mipmap/iv_edit"
                    android:drawablePadding="@dimen/size_5dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/size_3dp"
                    android:text="编辑"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:drawableLeft="@mipmap/iv_look"
                    android:drawablePadding="@dimen/size_5dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/size_3dp"
                    android:text="查看"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>