                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:background="@drawable/shape_order_reds"
                    android:layout_toRightOf="@+id/tv_again_buy2"
                    android:id="@+id/tv_now_pay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <!--待收货-->
            <RelativeLayout
                android:layout_marginRight="@dimen/size_8dp"
                android:id="@+id/rl_receive_goods"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35dp">

                <TextView
                    android:id="@+id/tv_sure_receive"
                    android:text="确认收货"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:background="@drawable/shape_order_grey"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="再次购买"
                    android:layout_toRightOf="@+id/tv_sure_receive"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:background="@drawable/shape_order_grey"
                    android:id="@+id/tv_again_buy3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="立即付款"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:background="@drawable/shape_order_reds"
                    android:layout_toRightOf="@+id/tv_again_buy3"
                    android:id="@+id/tv_now_pay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <!--待付款-->
            <RelativeLayout
                android:layout_marginRight="@dimen/size_8dp"
                android:id="@+id/rl_wait_pay"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35dp">

                <TextView
                    android:id="@+id/tv_cancel_order"
                    android:text="取消订单"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:background="@drawable/shape_order_reds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="立即付款"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:background="@drawable/shape_order_reds"
                    android:layout_toRightOf="@+id/tv_cancel_order"
                    android:id="@+id/tv_now_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <!--已取消-->
            <RelativeLayout
                android:layout_marginRight="@dimen/size_8dp"
                android:id="@+id/rl_canceled"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35dp">

                <TextView
                    android:id="@+id/tv_delete_order"
                    android:text="删除订单"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:background="@drawable/shape_order_reds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_buy_again"
                    android:text="再次购买"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:paddingLeft="@dimen/sp_14"
                    android:paddingRight="@dimen/sp_14"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:background="@drawable/shape_order_grey"
                    android:layout_toRightOf="@+id/tv_delete_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



























