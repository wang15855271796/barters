<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_30dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:src="@mipmap/icon_quan"
        android:layout_marginLeft="@dimen/size_22dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_given"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/size_11dp"
        android:layout_marginLeft="@dimen/size_11dp"
        android:textColor="#FF2925"
        android:drawablePadding="@dimen/size_5dp"
        android:text="购买以下商品满2箱，赠 （可叠加5次）："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>