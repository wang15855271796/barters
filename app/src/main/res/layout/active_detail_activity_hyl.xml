<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <com.barter.hyl.app.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="325dp"
                            app:layout_collapseMode="parallax" />

                        <ImageView
                            android:id="@+id/iv_send"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:layout_marginBottom="@dimen/size_30dp"
                            android:layout_gravity="bottom|right"
                            android:src="@mipmap/icon_not_send"
                            android:layout_width="152dp"
                            android:layout_height="@dimen/size_44dp" />

                    </FrameLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="商品详情"
                            android:textColor="@color/app_top_bar_text"
                            android:textSize="18dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color_white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:background="@mipmap/ic_black"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_60dp">



                            <!--<com.puyue.www.qiaoge.view.SnapUpCountDownTimerView1-->
                                <!--android:visibility="gone"-->
                                <!--android:layout_alignParentRight="true"-->
                                <!--android:layout_marginRight="@dimen/size_5dp"-->
                                <!--android:id="@+id/tv_cut_down"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginLeft="5dp" />-->

                            <RelativeLayout
                                android:id="@+id/rl_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_price"
                                    tools:text="700"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/size_28dp"
                                    android:layout_marginLeft="@dimen/size_13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    tools:text="限购一组"
                                    android:id="@+id/tv_limit_num"
                                    android:layout_toRightOf="@+id/tv_price"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/size_12dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_old_price"
                                    tools:text="70"
                                    android:layout_below="@+id/tv_price"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/size_12dp"
                                    android:layout_marginLeft="@dimen/size_15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>



                            <RelativeLayout
                                android:layout_alignParentRight="true"
                                android:layout_width="130dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_marginTop="@dimen/size_10dp"
                                    tools:text="开抢 "
                                    android:layout_centerHorizontal="true"
                                    android:textColor="#FF1D29"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <com.barter.hyl.app.view.Snap
                                    android:id="@+id/snap"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                </com.barter.hyl.app.view.Snap>
                                <ProgressBar
                                    android:id="@+id/pb"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_marginTop="@dimen/size_37dp"
                                    android:layout_width="100dp"
                                    android:layout_height="14dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="@dimen/size_10dp"
                                    android:progressDrawable="@drawable/layerlist_goods_progress" />


                                <TextView
                                    android:id="@+id/tv_surplus"
                                    tools:text="剩余"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/size_37dp"
                                    android:textColor="#ffffff"
                                    android:layout_marginLeft="@dimen/size_15dp"
                                    android:textSize="@dimen/size_10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginRight="145dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="标题"
                                    android:textStyle="bold"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/size_16dp" />


                            </LinearLayout>




                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_10dp"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_spec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="规格:1000"
                                android:background="@color/app_color_white"
                                android:textColor="#9D9D9D"
                                android:textSize="11dp" />



                            <TextView
                                android:id="@+id/tv_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/size_20dp"
                                tools:text="产地"
                                android:background="@color/app_color_white"
                                android:textColor="#9D9D9D"
                                android:textSize="11dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/size_15dp"
                         >

                            <TextView
                                android:layout_centerVertical="true"
                                android:id="@+id/tv_price1"
                                android:layout_width="wrap_content"
                                tools:text="100"
                                android:layout_height="wrap_content"
                                android:textColor="#FF2925"
                                android:textSize="@dimen/size_16dp" />

                            <TextView
                                android:id="@+id/tv_old_price1"
                                android:layout_width="wrap_content"
                                tools:text="100"
                                android:layout_toRightOf="@+id/tv_price1"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/size_12dp" />

                            <LinearLayout
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_sub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:src="@mipmap/app_reduce" />

                                <TextView
                                    android:id="@+id/tv_num"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/app_front_black"
                                    android:textSize="15dp" />

                                <ImageView
                                    android:id="@+id/iv_add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:src="@mipmap/icon_add" />
                            </LinearLayout>

                        </RelativeLayout>

                        <!--产品说明-->
                        <RelativeLayout
                            android:layout_marginLeft="15dp"
                            android:paddingTop="@dimen/size_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="产品说明："
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_toRightOf="@+id/tv1"
                                android:id="@+id/tv_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="产品说明"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:textColor="#292621"
                                android:layout_marginBottom="@dimen/size_15dp"
                                android:textSize="14dp" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/app_bg_gray" />


                        <RelativeLayout
                            android:layout_marginLeft="15dp"
                            android:paddingTop="@dimen/size_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品详情："
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:textSize="14dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_iv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_30dp">

                            </androidx.recyclerview.widget.RecyclerView>
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="80dp">

            <androidx.appcompat.widget.Toolbar
                android:layout_marginTop="@dimen/size_20dp"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"

                >

                <RelativeLayout
                    android:alpha="0.4"
                    android:id="@+id/rl_back"
                    android:background="@drawable/shape_grey"
                    android:layout_width="40dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    >

                    <ImageView
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_back_arrow" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/view_include_common_detail" />
</LinearLayout>