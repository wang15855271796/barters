<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/size_20dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_full_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/size_70dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="买"
                android:textColor="#ffffff"
                android:padding="@dimen/size_4dp"
                android:background="@drawable/shape_full_reds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_buy"
                tools:text="60g*16"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="赠"
                android:textColor="#ffffff"
                android:padding="@dimen/size_4dp"
                android:background="@drawable/shape_full_reds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_given"
                tools:text="60g*16"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            tools:text="最多可参与一次"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:textColor="#FF3C38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:padding="@dimen/size_5dp"
            android:textSize="@dimen/size_18dp"
            android:background="@drawable/shape_order_reds"
            android:id="@+id/tv_sure"
            android:text="我知道了"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>