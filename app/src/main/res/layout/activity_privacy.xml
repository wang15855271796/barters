<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f6f6f6"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/common_title_hyl"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/ll_root1"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="允许货易链访问位置信息权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF5C00"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="根据您的位置提供对应的企业商品、售价信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv0"
            android:text="已开启"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableRight="@mipmap/rightarrow"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_root2"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="允许货易链访问麦克风权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF5C00"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="为您提供在线客服语音消息的权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv1"
            android:text="已开启"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableRight="@mipmap/rightarrow"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_root3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/size_60dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="允许货易链读写外部存储"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF5C00"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="帮助您实现图片的保存和读取（行业信息发布）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:text="已开启"
            android:id="@+id/tv2"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableRight="@mipmap/rightarrow"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_root4"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="允许货易链读取电话状态"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF5C00"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="方便完成服务推送"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="已开启"
            android:id="@+id/tv3"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableRight="@mipmap/rightarrow"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_root5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/size_60dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="允许货易链访问相机权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF5C00"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="完成拍照功能并上传"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv4"
            android:text="已开启"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableRight="@mipmap/rightarrow"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_a"
            android:layout_marginTop="@dimen/size_12dp"
            android:text="个性化推荐设置"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_b"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/tv_a"
            android:layout_marginLeft="@dimen/size_12dp"
            android:text="关闭后，将无法根据您的兴趣爱好，购买习惯推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/tv_b"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textSize="@dimen/sp_12"
            android:text="您感兴趣的内容，建议保持开启状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:src="@mipmap/iv_opens" />
    </RelativeLayout>

</LinearLayout>