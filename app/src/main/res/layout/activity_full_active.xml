<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/common_title_hyl"/>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/size_11dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_roll"
                    android:layout_marginLeft="@dimen/size_22dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/size_11dp"
                    android:text="购买以下商品满2箱，赠 （可叠加5次）："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:id="@+id/tv_more"
                    android:text="查看更多>"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_full_given"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_120">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_tips"
            android:background="#FFF3C1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_gravity="center_vertical"
                android:text="提示：您的满赠机会已经用完了哦！"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginLeft="@dimen/size_20dp"
                android:drawablePadding="@dimen/size_5dp"
                android:drawableLeft="@mipmap/icon_tips"
                android:textColor="#FF2925"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_65dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:text="小计:"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/tv1"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                tools:text="20"
                android:id="@+id/tv_total"
                android:textColor="#FF680A"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/tv_total"
                android:layout_centerVertical="true"
                tools:text="20"
                android:layout_marginLeft="@dimen/size_20dp"
                android:id="@+id/tv_total_price"
                android:textColor="#FF680A"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_buy"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:text="去购物车"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16"
                android:background="#FF2925"
                android:layout_width="@dimen/public_space_value_120"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>