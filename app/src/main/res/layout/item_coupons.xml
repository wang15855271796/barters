<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f2f2f2"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--白底-->
        <RelativeLayout
            android:layout_marginLeft="@dimen/sp_12"
            android:layout_marginRight="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white1">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="￥"
                    android:id="@+id/tv_tip"
                    android:textColor="#F54022"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_alignBottom="@+id/tv_amount"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_alignBaseline="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="@dimen/size_20dp"
                    android:id="@+id/tv_amount"
                    android:textColor="#F54022"
                    tools:text="12"
                    android:layout_toRightOf="@+id/tv_tip"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll"
                    android:layout_marginLeft="@dimen/size_23dp"
                    android:layout_toRightOf="@+id/tv_amount"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/size_15dp"
                        tools:text="积分兑换积分兑换积分兑换积分兑换积分兑换"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_spec"
                        android:layout_marginTop="@dimen/size_5dp"
                        tools:text="200元无门槛消费券"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_marginTop="@dimen/size_10dp"
                        tools:text="2020.7.30  8:00—2020.7.31  9:00"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/size_18dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shape_orange"
                    android:layout_alignParentRight="true"
                    android:text="查看详情"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="数量:"
                    android:id="@+id/tv_put"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginRight="@dimen/size_45dp"
                    android:layout_marginTop="66dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    tools:text="20"
                    android:id="@+id/tv_num"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#F54022"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_marginTop="63dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/v"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_below="@+id/ll"
                    android:background="@drawable/app_my_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_3dp"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginBottom="@dimen/size_5dp" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="@dimen/size_15dp"
                android:layout_height="@dimen/size_15dp"
                android:layout_below="@+id/rl"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/icon_arrow_down" />

        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>