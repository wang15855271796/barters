<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64dp">

        <RelativeLayout
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_short"
                android:text="加盟名称公司简称"
                android:textColor="#333333"
                android:textSize="@dimen/ysf_text_size_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_long"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/tv_short"
                android:text="公司名称公司名称公司名称"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_choose"
                android:visibility="gone"
                android:src="@mipmap/icon_gou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#FF5C00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>