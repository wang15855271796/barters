<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_icon"
            android:layout_marginLeft="@dimen/size_25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/size_46dp"
                android:layout_height="@dimen/size_46dp"
                />



            <TextView
                android:id="@+id/tv_desc"
                android:background="@drawable/shape_red_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="会员会员"
                android:lines="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/size_5dp"
                android:paddingRight="@dimen/size_5dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>