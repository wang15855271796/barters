<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_market"
    android:background="#f8f8f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="true"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="#f5f5f5"
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/size_36dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_22dp"
                    android:layout_marginRight="@dimen/size_22dp"
                    android:background="@drawable/app_market_search_bg"
                    android:gravity="center"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/input_commodity"
                    android:textColor="#0A0A0A"
                    android:textSize="@dimen/size_14dp" />
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="#f5f5f5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_cate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/ll_all"
                        android:background="#f8f8f8"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/size_47dp"
                        android:layout_height="75dp">

                        <TextView
                            android:text="全"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="部"
                            android:drawablePadding="@dimen/size_5dp"
                            android:drawableBottom="@mipmap/icon_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>


            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:background="#ffffff"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal">

                                <androidx.core.widget.NestedScrollView
                                    android:layout_width="wrap_content"
                                    android:background="#f3f3f3"
                                    android:layout_height="match_parent">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_second"
                                        android:layout_width="100dp"
                                        android:background="#f3f3f3"
                                        android:layout_height="match_parent"
                                        />
                                </androidx.core.widget.NestedScrollView>

                                <!--筛选布局-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_marginLeft="@dimen/size_68dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="36dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:id="@+id/ll_price"
                                            android:gravity="center_horizontal"
                                            android:layout_width="@dimen/size_20dp"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:text="价格"
                                                android:id="@+id/tv_price"
                                                android:layout_gravity="center_vertical"
                                                android:layout_width="wrap_content"
                                                android:textSize="12dp"
                                                android:layout_height="wrap_content" />

                                            <ImageView
                                                android:id="@+id/iv_tip"
                                                android:src="@mipmap/icon_grey"
                                                android:layout_gravity="center_vertical"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                        </LinearLayout>

                                        <TextView
                                            android:text="销量"
                                            android:id="@+id/tv_sale"
                                            android:gravity="center"
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:textSize="12dp"
                                            android:layout_height="match_parent" />

                                        <TextView
                                            android:gravity="center"
                                            android:id="@+id/tv_select"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:text="筛选"
                                            android:textColor="#666666"
                                            android:textSize="12dp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/app_line_gray" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <com.example.xrecyclerview.XRecyclerView
                                            android:id="@+id/x_rv"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/app_color_white" />

                                        <View
                                            android:id="@+id/v_shadow"
                                            android:visibility="gone"
                                            android:background="#40000000"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="50dp"
                                            android:src="@mipmap/ic_no_data"
                                            android:visibility="gone" />
                                    </LinearLayout>

                                </LinearLayout>

                                <!--筛选布局-->

                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>




</LinearLayout>